    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
@foreach (var item in Model) {
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentStart)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.RentStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentEnd)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.RentEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.Movie.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.UserID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
            <input type="hidden" data-val="true" data-val-required="The RentalID field is required." 
                id="RentalID" name="RentalID" value=@item.RentalID.ToString() />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
}