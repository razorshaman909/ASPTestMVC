@model IEnumerable<MvcMovie.Models.User>

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
@foreach (var item in Model) {
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.FirstMidName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JoinDate)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.JoinDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" data-val="true" data-val-required="The UserID field is required." 
                id="RentalID" name="RentalID" value=@item.UserID.ToString() />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
}